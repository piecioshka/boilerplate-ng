{
    "private": true,
    "name": "ng-starter",
    "description": "Simple Angular starter",
    "version": "1.0.0",
    "license": "MIT",
    "author": {
        "name": "Piotr Kowalski",
        "email": "piecioshka@gmail.com",
        "url": "https://piecioshka.pl/"
    },
    "scripts": {
        "build": "npm run build-styles && npm run build-scripts",
        "build-styles": "node-sass app/ -o app/ --output-style expanded",
        "build-scripts": "webpack-cli",
        "watch": "npm run watch-styles & npm run watch-scripts",
        "watch-styles": "npm run build-styles -- --watch",
        "watch-scripts": "npm run build-scripts -- --watch",
        "start": "http-server public/ -d false -g",
        "clear": "rm -rf public/dist/ coverage/ .nyc_output/ app/**/*.css",
        "clear:all": "rm -rf node_modules/ && npm run clear",
        "test": "npm run test:unit",
        "test:unit": "mocha",
        "coverage": "nyc npm run test && nyc report --reporter=html",
        "coveralls": "nyc report --reporter=text-lcov | coveralls -v",
        "count": "find . -name '*.js' -not -path './node_modules/*' | xargs wc -l | sort -r",
        "lint": "tslint --project ."
    },
    "dependencies": {
        "@angular/common": "^7.1.0",
        "@angular/compiler": "^7.1.0",
        "@angular/core": "^7.1.0",
        "@angular/forms": "^7.1.0",
        "@angular/platform-browser": "^7.1.0",
        "@angular/platform-browser-dynamic": "^7.1.0",
        "@angular/router": "^7.1.0",
        "@types/node": "^10.12.10",
        "core-js": "^2.5.7",
        "http-server": "^0.11.1",
        "node-sass": "^4.10.0",
        "rxjs": "^6.3.3",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "raw-loader": "^0.5.1",
        "simple-progress-webpack-plugin": "^1.1.2",
        "ts-loader": "^5.3.0",
        "tslint": "^5.11.0",
        "typescript": "^3.1.6",
        "webpack": "^4.26.0",
        "webpack-cli": "^3.1.2"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:piecioshka/ng-starter.git"
    }
}
